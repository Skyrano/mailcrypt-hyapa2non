{
    "manifest_version": 2,
    "name": "HYaPa2Non",
    "description": "An extension to encrypt mails !",
    "version": "1.0",
    "author": "Alistair Rameau",
    "applications": {
        "gecko": {
            "id": "hyapa2non@univ-ubs.fr",
            "strict_min_version": "78.0",
            "strict_max_version": "78.*"
        }
    },
    "icons": {
        "64": "images/lock64.png",
        "32": "images/lock32.png",
        "16": "images/lock16.png"
    },
	"background": {
        "scripts": [
            "background.js"
        ]
    },
	"browser_action": {
        "default_popup": "secu.html",
        "default_title": "Security",
        "default_icon": "images/lock32.png"
    },
    "options_ui": {
      "page": "options/options.html",
      "open_in_tab": false,
      "browser_style": true
    },
    "permissions": [
    ]
}